@import "../../public/css/variables.pcss";

.block {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;

  a {
    display: block;
    color: #fff;
    font-family: var(--roboto);
    text-transform: uppercase;
    text-decoration: none;
    font-weight: 900;
    padding: 0 20px;
    font-size: 13px;
    @apply --transition;

    &:hover {
      color: var(--active);
    }
  }
}